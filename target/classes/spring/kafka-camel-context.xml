<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd        http://camel.apache.org/schema/spring       http://camel.apache.org/schema/spring/camel-spring.xsd">
    <!-- Camel Routes -->
    <camelContext id="camel" xmlns="http://camel.apache.org/schema/spring">

        <route id="kafka-timer-trigger" streamCache="true">
            <from id="kafka-timer" uri="timer:order?period=3000"/>
            <bean id="kafka-new-order" method="generateOrder" ref="orderGenerator"/>
            <setHeader headerName="Exchange.FILE_NAME" id="kafka-set-order-header">
                <!-- defining the header containing a simulated file name -->
                <method method="generateFileName" ref="orderGenerator"/>
            </setHeader>
            <setBody id="kafka-set-order-body">
                <constant>Hi from Anand</constant>    
            </setBody>
            <log id="kafka-log-order" message="Generating order ${file:name}"/>
            <to id="kafka-to-incoming-orders" uri="kafka:myTopic"/>
        </route>

<!--consumer -->

        <route id="kafka-cbr-route" streamCache="true">
            <from id="kafka-from-incoming-orders" uri="kafka:myTopic?groupId==camelTest"/>
            <log id="kafka-final-log" message="Done processing ${body}"/>
        </route>


    </camelContext>
</beans>
